<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.veritas.transcript-cleanup</string>

    <key>ProgramArguments</key>
    <array>
        <string>/bin/bash</string>
        <string>USER_HOME/VERITAS/claude-transcript-reader/cleanup-old-transcripts.sh</string>
    </array>

    <key>StartCalendarInterval</key>
    <dict>
        <key>Hour</key>
        <integer>2</integer>
        <key>Minute</key>
        <integer>0</integer>
    </dict>

    <key>StandardOutPath</key>
    <string>USER_HOME/.conversation-logger/cleanup.log</string>

    <key>StandardErrorPath</key>
    <string>USER_HOME/.conversation-logger/cleanup-error.log</string>
</dict>
</plist>
